<odoo>
    <data>

        <record id="siswa_ocb11.wizard_report_pembayaran_siswa_form" model="ir.ui.view">
            <field name="name">wizard.ocb11.keuangan_siswa</field>
            <field name="model">siswa_keu_ocb11.wizard_report_pembayaran_siswa</field>
            <field name="arch" type="xml">
                <form string="Report Pembayaran Siswa" class="o_sale_order" create="false">
                    <sheet>
                        <div class="oe_title oe_read_only">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tahunajaran_id" options="{'no_create_edit': True,'no_open':True,'no_edit':True,'no_create':True}" /> 
                                <field name="biaya_id" options="{'no_create_edit': True,'no_open':True,'no_edit':True,'no_create':True}" /> 
                            </group>
                            <group>
                                <field name="rombel_id" options="{'no_create_edit': True,'no_open':True,'no_edit':True,'no_create':True}" /> 
                            </group>
                            <notebook attrs="{'invisible':[('name', '=', '0')]}" >
                                <page>
                                    <field name="siswa_ids">
                                        <tree editable="bottom" create='false' edit="false">
                                            <field name="induk" />
                                            <field name="name" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <footer class="oe_edit_only" >
                            <button name="action_save" type="object"
                                string="Save" class="oe_highlight"/>
                                
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="siswa_keu_ocb11.wizard_report_pembayaran_siswa_action"
            name="Report Pembayaran Siswa"
            src_model="siswa_keu_ocb11.pembayaran"
            res_model="siswa_keu_ocb11.wizard_report_pembayaran_siswa"
            view_mode="form"
            target="new"
            key2="client_action_multi"/>
    </data>
</odoo>